<p id="notice"><%= notice %></p>

<h1>Plats</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plats.each do |plat| %>
      <tr>
        <td><%= plat.name %></td>
        <td><%= plat.age %></td>
        <td><%= image_tag plat.image %></td>
        <td><%= link_to 'Show', plat %></td>
        <td><%= link_to 'Edit', edit_plat_path(plat) %></td>
        <td><%= link_to 'Destroy', plat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plat', new_plat_path %>
